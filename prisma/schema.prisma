// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id  String @id @default(uuid())
  address String @unique
  paymail String @unique
  posts Post[]
  messages Message[]
  locks Lock[]
}

model Post {
  id String @id @default(uuid())
  txid String @unique
  content String
  contentType String
  inReplyTo String
  paymail String
  app String
  locks Lock[]
  user User @relation(fields: [paymail], references: [paymail])
}

model Message {
  id String @id @default(uuid())
  txid String @unique
  content String
  contentType String
  inReplyTo String
  paymail String
  app String
  locks Lock[]
  user User @relation(fields: [paymail], references: [paymail])
}

model Lock {
  id String @id @default(uuid())
  txid String @unique
  satoshis BigInt
  blockHeight Int
  post Post? @relation(fields:[postByTxid], references: [txid])
  postByTxid String?
  message Message? @relation(fields:[messageByTxid], references: [txid])
  messageByTxid String?
  user User @relation(fields:[userByAddress], references: [address])
  userByAddress String
}